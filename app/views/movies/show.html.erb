<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image %>
        <div class="star-rating" data-score= <%= @avg_review %>></div>
          <em><%= "#{@reviews.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %> </td>
              </tr>
              <tr>
                 <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to 'Write a review', new_movie_review_path(@movie), class: "btn btn-success"  %> |
          <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-success"  %> |
<%= link_to 'Back', movies_path, class: "btn btn-success"  %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <span class="review_title h1"><%= @movie.title %></span>  <%= link_to 'Write Review', new_movie_review_path(@movie), class: "btn btn-success pull-right" %>
        <p><%= @movie.description %></p>

        <% if @reviews.blank? %>
          <h3>This movie doesn't have any reviews yet.  Would you like to write one?</h3>
          
        <% else %>
          <% @reviews.each do |review| %>
            <div class="review">
              <p><%= review.rating %></p>
              <p><%= review.comment %></p>
            </div>
            <br>
          <% end %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>


<script>
  $('.star-rating').raty({
    path: '/assets',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>